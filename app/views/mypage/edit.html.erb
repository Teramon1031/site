<div class="top top-wrapper">
  <div id="top-text">
    <h1 id="top-h1">My Page</h1>
    <p id="top-p"></p>
  </div>
</div>
<div class="container">
  <div class="sub-container">
    <div class="subpage-title">
      <h2>新しい日記を投稿する</h2>
    </div>
    <div class="contents">
      <%= form_tag("/mypage/addDiary") do %>
        <div class="form">
          <div class="form-body">
            <h3>タイトル</h3>
            <input type="text" name="title">
            <h3>コード</h3>
            <input type="text" name="code">
            <h3>本文</h3>
            <textarea name="content"></textarea>
            <div class="flash">
              <p><%=flash[:notice]%></p>
            </div>
            <input type="submit" value="投稿">
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="sub-container">
    <div class="subpage-title">
      <h2>これまでの日記を編集する</h2>
    </div>
    <div class="card">
      <ul>
        <% @diaries.each do |diary| %>
          <%= link_to("/mypage/diary/#{diary.id}") do %>
            <li>
              <p class="title01"><%=diary.title%></p>
              <%if diary.archive %>
                <p>Archived</p>
              <%else%>
                <p>Public</p>
              <%end%>
              <p><%=diary.short%></p>
              <span class="next">> 編集する</span>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="bottom-btn form">
    <%=form_tag("/logout") do %>
      <input class="logout" type="submit" value="ログアウト">
    <%end%>
  </div>
</div>
